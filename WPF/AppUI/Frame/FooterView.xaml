<UserControl
	x:Class="WPF.AppUI.Frame.FooterView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WPF.AppUI.Frame"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance Type=local:FooterViewModel}"
	mc:Ignorable="d">

	<Grid>

		<materialDesign:Card Margin="0,8,0,16">
			<StackPanel HorizontalAlignment="Center">
				<TextBlock FontFamily="/assets/fonts/#TarponMotel" Text="{Binding FooterText}" />
			</StackPanel>
		</materialDesign:Card>

	</Grid>
</UserControl>
