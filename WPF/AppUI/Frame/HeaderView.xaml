<UserControl
	x:Class="WPF.AppUI.Frame.HeaderView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WPF.AppUI.Frame"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance Type=local:HeaderViewModel}"
	d:DesignHeight="450" d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid>

		<Grid.Resources>
			<Style TargetType="materialDesign:Card">
				<Setter Property="Margin" Value="0,16,0,8" />
				<Setter Property="Padding" Value="10" />
			</Style>
		</Grid.Resources>

		<materialDesign:Card>
			<DockPanel VerticalAlignment="Center">
				<StackPanel HorizontalAlignment="Left">
					<TextBlock FontFamily="/assets/fonts/#TarponMotel" FontSize="30" Text="{Binding HeaderTitle}" />
					<TextBlock Text="{Binding HeaderSubTitle}" />
				</StackPanel>
				<StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
					<StackPanel.Resources>
						<Style TargetType="Button">
							<Setter Property="Margin" Value="10,0" />
						</Style>
					</StackPanel.Resources>
					<Button Command="{}" Content="asdfasdf" />
					<Button Command="{}" Content="Close" />
				</StackPanel>
			</DockPanel>
		</materialDesign:Card>
	</Grid>
</UserControl>
