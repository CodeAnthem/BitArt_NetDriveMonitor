<UserControl
	x:Class="NetDriveManager.WPF.controls.FooterPartControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:NetDriveManager.WPF.controls"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450" d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid>

		<Grid.Resources>
			<Style TargetType="materialDesign:Card">
				<Setter Property="Margin" Value="0,8,0,16" />
				<Setter Property="Padding" Value="8" />
			</Style>
		</Grid.Resources>


		<materialDesign:Card>
			<StackPanel HorizontalAlignment="Center">
				<TextBlock FontFamily="/assets/fonts/#TarponMotel" Text="Bit Arts - Net Drive Manager" />
			</StackPanel>
		</materialDesign:Card>
	</Grid>
</UserControl>
