<UserControl
	x:Class="NetDriveManager.WPF.controls.HeaderControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:NetDriveManager.WPF.controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewmodels="clr-namespace:NetDriveManager.WPF.viewModels"
	d:DataContext="{d:DesignInstance Type=viewmodels:HeaderControlViewModel}"
	d:DesignHeight="450" d:DesignWidth="800" Background="Green"
	mc:Ignorable="d">
	<Grid>
		<StackPanel>
			<TextBlock Text="Header Control" />
			<TextBlock Text="{Binding HeaderTitle}" />
		</StackPanel>
	</Grid>
</UserControl>
