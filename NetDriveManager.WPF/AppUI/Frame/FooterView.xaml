<UserControl
	x:Class="NetDriveManager.WPF.AppUI.Frame.FooterView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:NetDriveManager.WPF.AppUI.Frame"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<GroupBox>

		<GroupBox.Resources>
			<Style TargetType="materialDesign:Card">
				<Setter Property="Margin" Value="0,8,0,16" />
				<Setter Property="Padding" Value="8" />
			</Style>
		</GroupBox.Resources>

		<materialDesign:Card>
			<StackPanel HorizontalAlignment="Center">
				<TextBlock FontFamily="/assets/fonts/#TarponMotel" Text="{Binding FooterText}" />
			</StackPanel>
		</materialDesign:Card>

	</GroupBox>
</UserControl>
