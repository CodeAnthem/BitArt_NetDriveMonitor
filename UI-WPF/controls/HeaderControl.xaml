<UserControl
	x:Class="UI_WPF.controls.HeaderControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:UI_WPF.controls"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="100" d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid>
		<materialDesign:Card Margin="16" Padding="8">
			<DockPanel Margin="20,0" VerticalAlignment="Center">
				<StackPanel HorizontalAlignment="Left">
					<TextBlock FontFamily="/assets/fonts/#TarponMotel" FontSize="40" Text="Net Drive Monitor" />
					<TextBlock Text="{Binding MyStringProperty}" />
				</StackPanel>
				<StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
					<StackPanel.Resources>
						<Style TargetType="Button">
							<Setter Property="Margin" Value="10,0" />
						</Style>
					</StackPanel.Resources>
					<Button Command="{}" Content="" />
					<Button Command="{}" Content="Close" />
				</StackPanel>
			</DockPanel>
		</materialDesign:Card>
	</Grid>
</UserControl>
